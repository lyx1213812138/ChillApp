/* survey-modal.wxss */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modal-container {
  width: 85%;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  box-sizing: border-box;
}

.survey-step {
  display: flex;
  flex-direction: column;
}

.step-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 10rpx;
}

.step-subtitle {
  font-size: 28rpx;
  color: #888;
  text-align: center;
  margin-bottom: 40rpx;
}

/* --- 第一页 --- */
.form-group {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.avatar-container {
  position: relative; /* 设为相对定位，作为按钮的定位基准 */
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
}

.avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%; /* 将图片本身设为圆形 */
  object-fit: cover;
  background-color: #eee;
}

.avatar-button {
  position: absolute; /* 绝对定位，覆盖在图片上 */
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0; /* 完全透明 */
}

.nickname-input {
  width: 100%;
  text-align: center;
  font-size: 32rpx;
  border-bottom: 1rpx solid #eee;
  padding-bottom: 10rpx;
}

.picker {
  display: flex;
  justify-content: space-between;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
}

.next-btn {
  background-color: #07c160;
  color: #fff;
  margin-top: 40rpx;
}

/* --- 第二页 --- */
.style-scroll-view {
  width: 100%;
  height: 35vw; /* 关键：为 scroll-view 设置明确的高度 */
  white-space: nowrap;
  margin-bottom: 40rpx;
}

.style-grid {
  display: inline-flex; /* 关键：让 grid 成为行内块元素，以便在 scroll-view 中横向排列 */
  gap: 20rpx;
}

.style-item {
  position: relative;
  width: 25vw; /* 调整宽度 */
  height: 35vw; /* 调整高度 */
  border-radius: 10rpx;
  overflow: hidden;
  background-color: #eee; /* 添加背景色，以便在图片加载失败时也能看到容器 */
}

.style-image {
  width: 100%;
  height: 100%;
  object-fit: cover; /* 保证图片等比填充 */
}

.style-item.selected .selected-icon {
  display: flex;
}

.selected-icon {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: #07c160;
  color: #fff;
  border-radius: 50%;
  display: none;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
}

.button-group {
  display: flex;
  gap: 20rpx;
}

.skip-btn,
.submit-btn {
  flex: 1;
}

.skip-btn {
  background-color: #f0f0f0;
}

.submit-btn {
  background-color: #07c160;
  color: #fff;
}
