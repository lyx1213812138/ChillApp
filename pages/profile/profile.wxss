/* pages/profile/profile.wxss */
.container {
  padding: 20rpx;
  background-color: #f7f8fa;
  min-height: 100vh;
}

.profile-card, .styles-card {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 20rpx 30rpx;
  margin-bottom: 20rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f2f2f2;
}

.info-item:last-child {
  border-bottom: none;
}

.label {
  font-size: 30rpx;
  color: #333;
}

.value {
  font-size: 30rpx;
  color: #888;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.styles-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.style-tag {
  background-color: #f0f0f0;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
}

.no-styles {
  color: #888;
  font-size: 28rpx;
}
