/* preview.wxss */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #000;
  color: #fff;
}

/* 顶部导航栏 */
.nav-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 90rpx;
  padding: 0 30rpx;
  background-color: rgba(0, 0, 0, 0.8);
  position: relative;
  z-index: 10;
}

.nav-btn {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.nav-icon {
  font-size: 40rpx;
  font-weight: bold;
}

.nav-title {
  font-size: 32rpx;
  font-weight: 500;
}

/* 照片预览区域 */
.preview-container {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  background-color: #000;
}

.preview-image {
  max-width: 100%;
  max-height: 100%;
}

/* 滤镜效果 */
.filter-original {
  filter: none;
}

.filter-bright {
  filter: brightness(1.2) contrast(1.1);
}

.filter-warm {
  filter: sepia(0.3) saturate(1.5);
}

.filter-cool {
  filter: hue-rotate(30deg) saturate(0.8);
}

.filter-vintage {
  filter: sepia(0.5) contrast(1.1) brightness(0.9);
}

/* 滤镜选择区域 */
.filter-container {
  height: 180rpx;
  background-color: rgba(0, 0, 0, 0.8);
  padding: 20rpx 0;
}

.filter-scroll {
  width: 100%;
  height: 100%;
  white-space: nowrap;
}

.filter-list {
  display: inline-flex;
  padding: 0 20rpx;
}

.filter-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0 15rpx;
  opacity: 0.7;
  transition: all 0.2s ease;
}

.filter-item.active {
  opacity: 1;
  transform: scale(1.1);
}

.filter-preview {
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
  background-color: #666;
  margin-bottom: 10rpx;
  border: 2rpx solid transparent;
}

.filter-item.active .filter-preview {
  border-color: #fff;
}

.filter-name {
  font-size: 24rpx;
  color: #fff;
}

/* 底部操作栏 */
.action-bar {
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 120rpx;
  background-color: rgba(0, 0, 0, 0.8);
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10rpx 30rpx;
}

.action-icon {
  font-size: 40rpx;
  margin-bottom: 10rpx;
}

.action-text {
  font-size: 24rpx;
  color: #fff;
}

/* 分享菜单 */
.share-menu {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.7);
  display: flex;
  justify-content: center;
  align-items: flex-end;
  z-index: 100;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s ease;
}

.share-menu.show {
  opacity: 1;
  pointer-events: auto;
}

.share-panel {
  width: 100%;
  background-color: #fff;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  color: #333;
  transform: translateY(100%);
  transition: transform 0.3s ease;
}

.share-menu.show .share-panel {
  transform: translateY(0);
}

.share-title {
  text-align: center;
  padding: 30rpx 0;
  font-size: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.share-options {
  display: flex;
  justify-content: space-around;
  padding: 40rpx 0;
}

.share-option {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.share-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 24rpx;
  margin-bottom: 20rpx;
}

.share-icon.wechat {
  background-color: #07C160;
}

.share-icon.moments {
  background-color: #8DC63F;
}

.share-text {
  font-size: 26rpx;
  color: #666;
}

.share-cancel {
  text-align: center;
  padding: 30rpx 0;
  font-size: 30rpx;
  border-top: 1rpx solid #eee;
  background-color: #f8f8f8;
}